{% trans_default_domain 'JLasoTranslationsApiBundle' %}

{% extends '::JLaso/TranslationsApiBundle/base.html.twig' %}


{% block stylesheets %}
    {{ parent() }}
    <style type="text/css">
        .center { text-align: center; }
    </style>
{% endblock stylesheets %}


{% block subcontent %}


<div class="row-fluid">
    <div class="span12">
        <div>
            <legend class="span4">{{ 'admin.translation.title'|trans }}</legend>
            {{ knp_pagination_render(pagination)|raw }}
        </div>

        <table class="table table-striped table-bordered table-condensed">
            <thead>
            <tr>
                <th>{{ 'admin.translation.key'|trans }}</th>
                <th>{{ 'admin.translation.locale'|trans }}</th>
                <th>{{ 'admin.translation.message'|trans }}</th>
                <th>{{ 'admin.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>


            {% for entity in pagination %}
                <tr class="{% if loop.index is odd %}odd{% else %}even{% endif %}">
                    <td>{{ entity.key }}</td>
                    <td>{{ entity.locale }}</td>
                    <td>{{ entity.message }}</td>
                    <td>
                        <a class="btn btn-primary" href="{{ path('jlaso_translationsapi_admin_key_edit', { 'id': entity.id }) }}">
                            <i class="glyphicon glyphicon-pencil" title="{{ 'admin.edit'|trans }}"></i>
                        </a>
                    </td>
                </tr>

            {% endfor %}
            </tbody>
        </table>

        <div class="jlaso_blog_navigation">
            {{ knp_pagination_render(pagination)|raw }}
        </div>

        {% endblock subcontent %}


